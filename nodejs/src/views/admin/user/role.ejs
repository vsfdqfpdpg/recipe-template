<%- include("../layouts/header") %>
<div class="mt-3">
  <div class="col-6 m-auto">
    <div class="row">
      <h3><%= member.first_name +" "+ member.last_name%></h3>
      <h5><%= member.email %></h5>
    </div>

    <div>
      <form action="" method="post">
        <div class="mb-3">
          <label for="role" class="mb-2">Roles</label>
          <select name="role" id="role" multiple class="form-control">
            <% roles.forEach(r => { %>
            <option value="<%= r.id %>" <%= member.Roles.map(i => i.id).includes(r.id) ? "selected" : "" %>><%= r.title %></option>
            <% }) %>
          </select>
        </div>
        <div class="d-flex justify-content-end mb-3">
            <div class="btn btn-sm btn-secondary me-3" onclick="history.back()">Cancel</div>
          <button type="submit" class="btn btn-sm btn-primary">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("../layouts/footer") %>
