<%- include("../layouts/header") %>
<div class="mt-3">
  <h3> <%= role.title %></h3>
  <% if(permissions.length){ %>
  <form action="" method="post">
    <div class="mb-3">
      <label for="permissions">Permissions</label>
      <select name="permissions" id="permissions" class="form-control" multiple>
        <% permissions.forEach(item => { %>
        <option value="<%= item.id %>" <%= role.Permissions.filter(i => i.id == item.id).length ? "selected" : "" %>><%= item.title %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-sm btn-primary form-control">
        Assign Permission
      </button>
    </div>
  </form>
  <% } else { %>
    <div class="alert alert-warning">
      <span>There is no permission yet, please create one first.</span>
    </div>
    <% } %>
</div>
<%- include("../layouts/footer") %>
