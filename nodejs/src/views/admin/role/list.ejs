<%- include('../layouts/header'); %>
<div class="mt-3">
  <div>
    <a href="/admin/role/create" class="btn btn-sm btn-primary">Add</a>
  </div>
  <div class="row">
    <% if(roles.rows.length){ %>
    <table class="table">
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Active</th>
        <th>Actions</th>
      </tr>
      <% roles.rows.forEach(item => { %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.active %></td>
        <td>
          <a href="/admin/role/<%=item.id%>" class="btn btn-sm btn-secondary"
            >View</a
          >
          <a href="/admin/role/<%=item.id%>/edit" class="btn btn-sm btn-info"
            >Edit</a
          >
          <a
            href="/admin/role/<%= item.id %>/assign"
            class="btn btn-sm btn-secondary"
            >Asign</a
          >
          <a
            href="/admin/role/<%=item.id%>/delete"
            class="btn btn-sm btn-danger"
            >Delete</a
          >
        </td>
      </tr>
      <% }) %>
    </table>
    <%- include("../layouts/pagination") %> <% } else {%>
    <div class="alert alert-warning m-3">
      <span>There is no role.</span>
    </div>
    <% } %>
  </div>
</div>
<%- include('../layouts/footer'); %>
